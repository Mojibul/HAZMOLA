ALTER TABLE STLBAS.STTRDETL DROP PRIMARY KEY CASCADE;

DROP TABLE STLBAS.STTRDETL CASCADE CONSTRAINTS;

CREATE TABLE STLBAS.sttrdetl
(
   TRNSRLNO   NUMBER (14),
   COMPCODE   VARCHAR2 (3 BYTE) NOT NULL,
   DOCTTYPE   VARCHAR2 (2 BYTE) NOT NULL,
   SUBTTYPE   NUMBER (2),
   DOCNUMBR   VARCHAR2 (12 BYTE) NOT NULL,
   DOCTDATE   DATE NOT NULL,
   SERLNUMB   NUMBER (5) NOT NULL,
   NOSTCODE   VARCHAR2 (10 BYTE),
   NOSTDATE   DATE,
   NOSTRFNO   VARCHAR2 (60 BYTE),
   OPRSTAMP   VARCHAR2 (6 BYTE) NOT NULL,
   TIMSTAMP   DATE NOT NULL,
   PADLTRAC   VARCHAR2 (12 BYTE),
   HOCRFAMT   NUMBER (16, 3),
   HOCREXRT   NUMBER (16, 5),
   ACVLDATE   DATE,
   NOSVALUE   NUMBER,
   UPDATEBY   VARCHAR2 (6 BYTE),
   UPDATEDT   DATE,
   CURCDE     VARCHAR2 (3 BYTE),
   PRGNAM     VARCHAR2 (10 BYTE)
);

ALTER TABLE STLBAS.sttrdetl 
ADD lcnumb VARCHAR2(25);

