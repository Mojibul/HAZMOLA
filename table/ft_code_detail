DROP TABLE STLBAS.FT_CODE_DETAIL CASCADE CONSTRAINTS;

CREATE TABLE STLBAS.FT_CODE_DETAIL
(
  LCTYPE     VARCHAR2(3 BYTE),
  LCOPRTYP   VARCHAR2(5 BYTE),
  OPRCOD     VARCHAR2(3 BYTE),
  DEBCRE     VARCHAR2(1 BYTE)                   DEFAULT 'X'                   NOT NULL,
  ACTFLG     VARCHAR2(1 BYTE)                   DEFAULT 'Y'                   NOT NULL,
  OPRSTAMP   VARCHAR2(6 BYTE)                   DEFAULT 'SYSTEM'              NOT NULL,
  TIMESTAMP  DATE                               DEFAULT trunc(SYSDATE)        NOT NULL,
  GLCODE     VARCHAR2(10 BYTE),
  SRLNUM     NUMBER
);

-- Use in BTB LC
ALTER TABLE FT_CODE_DETAIL
ADD  forbtb   VARCHAR2(1);
-- Distinguish its Sight L/C or Deferred L/C
ALTER TABLE FT_CODE_DETAIL
ADD  sitdef   VARCHAR2(1);
